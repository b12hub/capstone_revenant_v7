{
  "$id": "https://capstone.revenant/classifier_result.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClassifierResult",
  "type": "object",
  "required": ["intent","severity","scores","confidence","trace_id"],
  "properties": {
    "intent": {"type": "string", "description": "Top predicted intent"},
    "severity": {"type": "string", "enum": ["low","medium","high","critical"]},
    "scores": {
      "type": "object",
      "description": "Raw scores per intent label (pre-softmax)",
      "additionalProperties": { "type": "number" }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "tie_breaker": { "type": "string", "description": "Method used for tie-breaking (if applied)" },
    "trace_id": {"type": "string"},
    "timing_ms": {"type":"integer"}
  },
  "additionalProperties": false
}
