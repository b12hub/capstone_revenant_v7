{
  "$id": "https://capstone.revenant/orchestrator_response.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrchestratorResponse",
  "type": "object",
  "required": ["ticket_id","intent","severity","kb_evidence","actions","confidence","timing_ms","trace_id"],
  "properties": {
    "ticket_id": {"type":"string"},
    "intent": {"type":"string"},
    "severity": {"type":"string"},
    "kb_evidence": {
      "type":"array",
      "items": {"type":"object"}
    },
    "actions": {
      "type":"array",
      "items": {
        "type":"object",
        "required":["action","description","confidence","risk_level"],
        "properties": {
          "action": {"type":"string"},
          "description": {"type":"string"},
          "confidence": {"type":"number"},
          "risk_level": {"type":"string"}
        },
        "additionalProperties": true
      }
    },
    "confidence": {"type":"number","minimum":0,"maximum":1},
    "timing_ms": {"type":"integer"},
    "trace_id": {"type":"string"},
    "debug": {"type":"object"}
  },
  "additionalProperties": false
}
